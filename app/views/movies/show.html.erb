 <div class="panel panel-default gray">
    <div class="panel-body">
    <div class="row cont">
      <div class="col-md-4">
        <div class="img-show"><img src="<%=@movie.image%>" alt="Movie image" class='image'/></div>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Category:</strong></td>
                <td><%= @movie.category %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>
    <span class="button is-small is-light is-transparent is-static"><%= pluralize(@movie.likes_counter, ('like')) %></span>
        
        <% if @reviews.blank? %>
          <h5>No reviews just yet, would you like to add the first!</h5>
          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-primary" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
            <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="show-crud">
<%= link_to 'Delete', movie_path(@movie), method: :delete, data: {confirm: "Are you sure you want to delete this movie?"},class: 'btn btn-danger' %>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
</div>

<script>

    $('.star-rating').raty({
      number: 10,
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });

</script> 
